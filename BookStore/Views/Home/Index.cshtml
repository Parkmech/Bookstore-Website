<div class="text-center">

    <table class="table table-hover table-dark table-striped">
        <thead class="thead-dark">
            <tr><th>Title</th><th>Author First Name</th><th>Author Middle Name </th><th>Author Last Name</th><th>Book Length</th><th>Publisher</th><th>ISBN</th><th>Classification</th><th>Category</th><th>Price</th></tr>
        </thead>

        <tbody>
            <!--This loop iterates through the model and gets all of the information that was entered in and adds it to the table-->
            @foreach (var x in Model.Books)
            {
                <tr>

                    <td>@x.Title</td>
                    <td>@x.AuthFirstName</td>
                    <td>@x.AuthMiddleName</td>
                    <td>@x.AuthLastName</td>
                    <td>@x.NumPages Pages</td>
                    <td>@x.Publisher</td>
                    <td>@x.ISBN</td>
                    <td>@x.Classification</td>
                    <td>@x.Category</td>
                    <td>@x.Price</td>

                </tr>
            }

        </tbody>
    </table>

